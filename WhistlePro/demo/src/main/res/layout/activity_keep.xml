<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.enst.pact34.whistlepro.demo.KeepActivity">

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/partiBtn"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/partitiondemo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/listenBtn"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_below="@+id/partiBtn"
        android:layout_centerHorizontal="true"
        android:src="@drawable/listen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Garder ?"
        android:id="@+id/keepTxt"
        android:layout_below="@+id/listenBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:id="@+id/yesBtn"
        android:src="@drawable/emoticone_smile"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/keepTxt"
        android:layout_toStartOf="@+id/keepTxt" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:id="@+id/noBtn"
        android:src="@drawable/emoticone_triste"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/keepTxt"
        android:layout_toEndOf="@+id/keepTxt" />
</RelativeLayout>
